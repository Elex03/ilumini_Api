generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Rol {
  USER 
  ADMIN
}


model USUARIO {
  user_pk Int      @id @default(autoincrement())
  email     String   @db.VarChar(30)
  password String   @db.VarChar(100)
  rol        Rol
}
